# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Post {
  id: Int!
  Title: String!
  Content: String!
  Author: String!
  Hero: String!
  Published_At: String!
  Updated_At: String!
  Comments: [Comment]
}

type Comment {
  id: ID!
  postID: Int!
  Description: String!
}
 
type Query {
  GetAllPosts: [Post!]!
  GetOnePost(id: Int!): Post!
  GetComments: [Comment!]!
}
 
input NewPost {
  Title: String!
  Content: String!
  Author: String
  Hero: String
  Published_At: String
  Updated_At: String
  Comments: [NewComment!]!
}

input NewComment{
 Description: String!
 postId: Int!
}
 
type Mutation {
  CreatePost(input: NewPost!): Post!
  UpdatePost(PostId: Int!, input: NewPost): Post!
  CreateComment(input: NewComment!):Comment!
}
